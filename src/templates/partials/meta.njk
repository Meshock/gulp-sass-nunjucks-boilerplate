<!-- Facebook -->
<meta property="og:type" content="website">
<meta property="og:title" content="{{ (title + " - " + meta.domain) if title else meta.domain }}">
<meta property="og:site_name" content="{{ meta.domain_lower }}">
<meta property="og:url" content="{{ meta.url }}{{ "/" + subName if subName }}{{ "/" + title|lower if title }}">
<meta property="og:description" content="{{ meta.description }}">
<meta property="og:image" content="{{ meta.url }}/images/{{ meta.image }}">
<meta property="og:image:type" content="image/png">
<meta property="og:image:width" content="1920">
<meta property="og:image:height" content="1080">

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ (title + " - " + meta.domain) if title else meta.domain }}">
<meta name="twitter:domain" content="{{ meta.domain_lower }}">
<meta name="twitter:url" content="{{ meta.url }}{{ "/" + subName if subName }}{{ "/" + title|lower if title }}">
<meta name="twitter:description" content="{{ meta.description }}">
<meta name="twitter:image" content="{{ meta.url }}/images/{{ meta.image }}">
<meta name="twitter:image:width" content="1920">
<meta name="twitter:image:height" content="1080">